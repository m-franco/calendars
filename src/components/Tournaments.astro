---
import TournamentCard from "./TournamentCard.astro";

const tournaments = [
{
    href:"libertadores",
    title:"Copa Libertadores",
    imgSrc:"img/icons/conmebol-libertadores-solid.png",
    backgroundImage:"img/icons/libertadores-bg.jpg"
},
{
    href:"sudamericana",
    title:"Copa Sudamericana",
    imgSrc:"img/icons/sudamericana.png",
    backgroundImage:"img/icons/sudamericana-bg.jpg"
}
];
---
<ul role="list" class="flex flex-wrap justify-between">
    {
        tournaments.map(({href,title,imgSrc,backgroundImage}) => (
            <TournamentCard
                href={href}
                title={title}
                imgSrc={imgSrc}
                backgroundImage={backgroundImage}

            />
        ))
    }
</ul>