---
interface Props {
	title: string;
	href: string;
    imgSrc: string;
    backgroundImage: string;
}

const imagePath = import.meta.env.PUBLIC_IMAGE_PATH ?? "";

const { href, title, imgSrc, backgroundImage } = Astro.props;
---

<li class="link-card w-80 h-80 flex items-center justify-center bg-center bg-cover"
    style={{
        backgroundImage:`url(${imagePath}${backgroundImage})`,
        }}
 >
	<a href={`${imagePath}${href}`}
    >
        <img class="w-56"
        src={`${imagePath}${imgSrc}`}
        alt={title} />
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		border-radius: 7px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
