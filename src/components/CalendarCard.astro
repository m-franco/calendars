---
interface Props {
	calendar: string;
    imageName?: string;
    tournament: string;
    link:string;
    target?:string;
}

const imagePath = import.meta.env.PUBLIC_IMAGE_PATH ?? "";

const { calendar, imageName, tournament, link, target } = Astro.props;
---

<div class="link-card w-36 h-44 flex items-center justify-center bg-center bg-cover"
    style={{
        backgroundImage:`url(../../${imagePath}img/icons/${tournament}-bg.jpg)`,
        }}
 >
	<a href={link} class="w-full h-full" target={target}>
        <div class="flex w-full h-full flex-col items-center justify-center">
            <img class="w-24"
            src={`../../${imagePath}img/icons/${imageName}`}
            alt={calendar} />
            <div class="text-center text-sm mt-3">{calendar}</div>
        </div>   
	</a>
</div>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		border-radius: 7px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
